  <ontology>
    <term_definitions language="nb">
      <items code="at0000">
        <items id="text">Boston Bowel Preparation Skala</items>
        <items id="description">En skår for å vurdere og dokumentere tarmtømmingsgrad under koloskopi.</items>
      </items>
      <items code="at0001">
        <items id="text">Høyre kolon</items>
        <items id="description">Inkluderer coecum og ascendens.</items>
      </items>
      <items code="at0002">
        <items id="text">Mucosa ikke sett</items>
        <items id="description">Fast avføring tilstede.</items>
      </items>
      <items code="at0003">
        <items id="text">Mucosa delvis sett</items>
        <items id="description">Farget væske og avføringsrester tilstede.</items>
      </items>
      <items code="at0004">
        <items id="text">Mucosa godt visualisert</items>
        <items id="description">Små mengder farget væske eller avføring.</items>
      </items>
      <items code="at0005">
        <items id="text">Mucosa komplett visualisert</items>
        <items id="description">Ingen farget væske eller avføring.</items>
      </items>
      <items code="at0012">
        <items id="text">Totalskår</items>
        <items id="description">Summen av de de tre parameterne i Boston bowel preparation skala.</items>
      </items>
      <items code="at0013">
        <items id="text">Transversum</items>
        <items id="description">Inkluderer høyre og venstre fleksur.</items>
      </items>
      <items code="at0018">
        <items id="text">Venstre kolon</items>
        <items id="description">Descendens, sigmoideum og rektum.</items>
      </items>
    </term_definitions>
    <term_definitions language="en">
      <items code="at0000">
        <items id="text">Boston Bowel Preparation Scale</items>
        <items id="description">An assessment score used to record the quality of bowel cleanliness during colonoscopy.</items>
      </items>
      <items code="at0001">
        <items id="text">Right colon</items>
        <items id="description">Including the cecum and ascending colon.</items>
      </items>
      <items code="at0002">
        <items id="text">Unprepared colon segment with mucosa not seen.</items>
        <items id="description">Because of solid stool that cannot be cleared.</items>
      </items>
      <items code="at0003">
        <items id="text">Portion of mucosa of the colon segment seen.</items>
        <items id="description">Other areas of the colon segment are not well seen because of staining, residual stool, and/or opaque liquid.</items>
      </items>
      <items code="at0004">
        <items id="text">Mucosa of colon segment seen well.</items>
        <items id="description">Minor amount of residual staining, small fragments of stool and/or opaque liquid.</items>
      </items>
      <items code="at0005">
        <items id="text">Entire mucosa of colon segment seen well.</items>
        <items id="description">No residual staining, small fragments of stool, or opaque liquid.</items>
      </items>
      <items code="at0012">
        <items id="text">Total score</items>
        <items id="description">The total sum of each component parameter for the Boston bowel preparation scale.</items>
      </items>
      <items code="at0013">
        <items id="text">Transverse</items>
        <items id="description">Including the hepatic and splenic flexures.</items>
      </items>
      <items code="at0018">
        <items id="text">Left colon</items>
        <items id="description">Including the descending colon, sigmoid colon and rectum.</items>
      </items>
    </term_definitions>
