    <term_definitions language="en">
      <items code="at0000">
        <items id="text">Modified Mallampati classification</items>
        <items id="description">A classification that relates to the degree of visibility in the oral cavity and pharynx to assess the difficulty of oral intubation by direct laryngoscopy.</items>
      </items>
      <items code="at0001">
        <items id="text">Event Series</items>
        <items id="description">@ internal @</items>
      </items>
      <items code="at0002">
        <items id="text">Any point in time event</items>
        <items id="description">Unspecified point in time event which may be explicitly defined in a template or at run-time.</items>
      </items>
      <items code="at0003">
        <items id="text">Tree</items>
        <items id="description">@ internal @</items>
      </items>
      <items code="at0004">
        <items id="text">Mallampati classification</items>
        <items id="description">Mallampati classification.</items>
      </items>
      <items code="at0005">
        <items id="text">Comment</items>
        <items id="description">Narrative comment about the Mallampati Classification.</items>
      </items>
      <items code="at0006">
        <items id="text">Class 1</items>
        <items id="description">The entire tonsillar pillars, uvula, hard and soft palates are visualised.</items>
      </items>
      <items code="at0007">
        <items id="text">Class 2</items>
        <items id="description">Partial uvula and soft palate are visualised.</items>
      </items>
      <items code="at0008">
        <items id="text">Class 3</items>
        <items id="description">Only the soft palate is visualised.</items>
      </items>
      <items code="at0009">
        <items id="text">Class 4</items>
        <items id="description">No visualisation of any structures beyond the tongue, only the hard palate is visible.</items>
      </items>
      <items code="at0010">
        <items id="text">Tree</items>
