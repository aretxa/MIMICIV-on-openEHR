      <items code="at0006">
        <items id="text">Klasse 1</items>
        <items id="description">Tonsillesøylene, uvula, hard og bløt gane er fullstendig synlige.</items>
      </items>
      <items code="at0007">
        <items id="text">Klasse 2</items>
        <items id="description">Uvula og bløt gane er delvis synlige.</items>
      </items>
      <items code="at0008">
        <items id="text">Klasse 3</items>
        <items id="description">Kun bløt gane er synlig.</items>
      </items>
      <items code="at0009">
        <items id="text">Klasse 4</items>
        <items id="description">Ingen visualisering av strukturer bak tungen, kun hard gane er synlig.</items>
      </items>
